<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_new_game_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityNewGame">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/quizComplete"
        android:textSize="50dp"/>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/quiz_result"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="-2dp"
        android:text="@string/yourScore"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/quiz_result"
        android:layout_width="124dp"
        android:layout_height="82dp"
        android:layout_below="@id/result_title"
        android:layout_alignEnd="@+id/result_title"
        android:layout_alignParentTop="true"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="1dp"
        android:text="@string/loading"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/quiz_finish_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/quiz_result"
        android:layout_alignStart="@+id/result_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-103dp" />

    <Button
        android:id="@+id/play_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz_finish_image"
        android:layout_centerHorizontal="true"
        android:text="@string/play_again"
        android:background="@drawable/play_icon_shape"
        android:padding="15dp"
        android:layout_marginTop="100dp"
        android:textSize="20dp"/>

</RelativeLayout>