<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_new_game_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityNewGame">

    <TextView
        android:id="@+id/quiz_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/quiz_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/quiz_question"
        android:layout_width="320dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:text="@string/loading"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/quiz_finish_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/quiz_score"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/quiz_true_button"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/quiz_question"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="99dp"
        android:text="True"
        android:background="@drawable/answer_button_shape"/>

    <Button
        android:id="@+id/quiz_false_button"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/quiz_question"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:text="False"
        android:background="@drawable/answer_button_shape"/>

</RelativeLayout>