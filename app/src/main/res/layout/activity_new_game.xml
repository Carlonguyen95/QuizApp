<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_new_game_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityNewGame">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/quiz_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/quiz_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-394dp"
        android:text="@string/loading"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/quiz_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:text="@string/loading"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/quiz_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:background="@drawable/timer_shape"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/quiz_question"
        android:layout_width="320dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"
        android:background="@drawable/round_icon_shape"
        android:text="@string/loading"
        android:textAlignment="center"
        android:padding="30dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/quiz_true_button"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/quiz_question"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="True"
        android:background="@drawable/answer_button_shape"/>

    <Button
        android:id="@+id/quiz_false_button"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/quiz_question"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="False"
        android:background="@drawable/answer_button_shape"/>

</RelativeLayout>