<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ActivityMain">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="115dp"/>
        <!--android:src="@drawable/applogo1"/>-->

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="33sp"
        android:textAlignment="center"
        android:shadowColor="@color/colorAccent"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="20"/>

    <ImageButton
        android:id="@+id/gameStartBtn"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:padding="15dp"/>
        <!--android:background="@drawable/home_button_shape"-->
        <!--android:src="@drawable/playlogo1" />-->

    <ImageButton
        android:id="@+id/gameStatsBtn"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"/>
        <!--android:background="@drawable/home_button_shape"-->
        <!--android:src="@drawable/statslogo" />-->

    <ImageButton
        android:id="@+id/gameSettingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"/>
        <!--android:background="@drawable/home_button_shape"-->
        <!--android:src="@drawable/settingslogo1" />-->

</LinearLayout>