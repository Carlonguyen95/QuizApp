<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".Activities.ActivityMain">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:shadowColor="#FFF"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="20"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="33sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/app_main_logo"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/app_main_logo" />

    <Button
        android:id="@+id/game_start_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/play_icon_shape"
        android:padding="15dp"
        android:text="@string/play"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/game_stats_button"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:background="@drawable/round_icon_shape"
            android:src="@drawable/app_stats_logo" />

        <ImageButton
            android:id="@+id/game_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="85dp"
            android:background="@drawable/round_icon_shape"
            android:src="@drawable/app_settings_logo" />

        <TextView
            android:id="@+id/game_settings_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_stats_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="105dp"
            android:text="Settings" />

        <TextView
            android:id="@+id/game_stats_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_stats_button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:text="Stats" />

    </RelativeLayout>

</LinearLayout>